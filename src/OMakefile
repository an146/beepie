USE_OCAMLFIND = true

OCAMLPACKS[] +=
   base
   batteries

if $(not $(OCAMLFIND_EXISTS))
   eprintln(This project requires ocamlfind, but is was not found.)
   eprintln(You need to install ocamlfind and run "omake --configure".)
   exit 1

# fix for Arch Linux
CFLAGS += -I /usr/lib/ocaml
OCAMLFLAGS += -thread

BINDINGS = alsa
BINDINGS_LINK_FLAGS = -cclib -lasound

OCAMLINCLUDES += ../util
OCAML_LIBS += ../util/libutil

.SUBDIRS: mid gui tests util
