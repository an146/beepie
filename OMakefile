USE_OCAMLFIND = true

if $(not $(OCAMLFIND_EXISTS))
   eprintln(This project requires ocamlfind, but is was not found.)
   eprintln(You need to install ocamlfind and run "omake --configure".)
   exit 1

OCAMLPACKS[] +=
   batteries

OCAMLFLAGS += -thread
OCAML_LINK_FLAGS += -thread

SRC_DIRS[] =
   src
   src/gui
   src/mid
   src/render
   src/util
   tests

foreach (d, $(SRC_DIRS))
   mkdir -p _build/$(d)
   vmount(-l, $(d), _build/$(d))
   export

.SUBDIRS: _build/src _build/tests

.PHONY: all
all: gui tester

.PHONY: test-gui
test-gui: gui
   ./_build/src/gui/gui

.PHONY: test
test: all
   ./_build/tests/tester

.DEFAULT: all test
#.DEFAULT: test-gui

.PHONY: clean
clean:
   rm -Rf _build
