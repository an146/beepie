SRC_DIRS[] =
   gui
   mid
   tests

vmount(-l, src, _build)
foreach (d, $(SRC_DIRS))
   mkdir -p _build/$(d)
   vmount(-l, src/$(d), _build/$(d))
   # WTF: vmount is scoped, but works without export
   # export

.SUBDIRS: _build

.PHONY: test-gui
test-gui: gui
   ./_build/gui/gui

.DEFAULT: gui
#.DEFAULT: test-gui

.PHONY: clean
clean:
   rm -Rf _build
